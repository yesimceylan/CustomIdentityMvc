@model Reservation.mvcproject.Entities.Hotel;

@{
    ViewData["Title"] = "CreateHotelIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Create Hotel </h1>

<div class="container">
    <div class="card" style="opacity: 0.7;">
        <div class="card-body">
            <form asp-action="AddHotel" asp-controller="Hotel" method="post">
                <div class="row">
                    <div class="col-sm-3">
                        <label asp-for="HotelName"></label>
                        <input asp-for="HotelName" class="form-control" />
                        <span class="text-danger">@Html.ValidationMessageFor(m => m.HotelName)</span>
                    </div>
                    <div class="col-sm-3">
                        <label asp-for="City"></label>
                        <input asp-for="City" class="form-control" />
                        <span class="text-danger">@Html.ValidationMessageFor(m => m.City)</span>
                    </div>

                    <div class="col-sm-3">
                        <label asp-for="Location"></label>
                        <input asp-for="Location" class="form-control" />
                        <span class="text-danger">@Html.ValidationMessageFor(m => m.Location)</span>
                    </div>

                    <div class="col-sm-3">
                        <label asp-for="StarRating"></label>
                        <input asp-for="StarRating" class="form-control" />
                        <span class="text-danger">@Html.ValidationMessageFor(m => m.StarRating)</span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <label asp-for="HotelImage"></label>
                        <input asp-for="HotelImage" class="form-control" />
                        <span class="text-danger">@Html.ValidationMessageFor(m => m.HotelImage)</span>
                    </div>

@*                     <div class="col-sm-6">
                        <label asp-for="HotelImage"></label>
                        <input asp-for="HotelImage" type="file" class="form-control" />
                        <span class="text-danger">@Html.ValidationMessageFor(m => m.HotelImage)</span>
                    </div> *@

                    <div class="col-sm-6">
                        <label asp-for="HotelImage2"></label>
                        <input asp-for="HotelImage2" class="form-control" />
                        <span class="text-danger">@Html.ValidationMessageFor(m => m.HotelImage2)</span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <label asp-for="HotelImage3"></label>
                        <input asp-for="HotelImage3" class="form-control" />
                        <span class="text-danger">@Html.ValidationMessageFor(m => m.HotelImage3)</span>
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="HotelImage4"></label>
                        <input asp-for="HotelImage4" class="form-control" />
                        <span class="text-danger">@Html.ValidationMessageFor(m => m.HotelImage4)</span>
                    </div>
                </div>


                <div class="row">
                    <div class="col-sm-3">
                        <label asp-for="Price"></label>
                        <input asp-for="Price" class="form-control" />
                        <span class="text-danger">@Html.ValidationMessageFor(m => m.Price)</span>
                    </div>
                    <div class="col-sm-3">
                        <label asp-for="PeopleCount"></label>
                        <input asp-for="PeopleCount" class="form-control" />
                        <span class="text-danger">@Html.ValidationMessageFor(m => m.PeopleCount)</span>
                    </div>
                    <div class="col-sm-3">
                        <label asp-for="Bathrooms"></label>
                        <input asp-for="Bathrooms" class="form-control" />
                        <span class="text-danger">@Html.ValidationMessageFor(m => m.Bathrooms)</span>
                    </div>
                    <div class="col-sm-3">
                        <label asp-for="Bedrooms"></label>
                        <input asp-for="Bedrooms" class="form-control" />
                        <span class="text-danger">@Html.ValidationMessageFor(m => m.Bedrooms)</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <label asp-for="CheckIn"></label>
                        <input asp-for="CheckIn" class="form-control" />
                        <span class="text-danger">@Html.ValidationMessageFor(m => m.CheckIn)</span>
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="CheckOut"></label>
                        <input asp-for="CheckOut" class="form-control" />
                        <span class="text-danger">@Html.ValidationMessageFor(m => m.CheckOut)</span>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Wifi"></label>
                        <input type="checkbox" asp-for="Wifi" />
                        <span class="text-danger">@Html.ValidationMessageFor(m => m.Wifi)</span>
                    </div>
                    <div class="col-sm-2">
                        <label asp-for="Shower"></label>
                        <input type="checkbox" asp-for="Shower" />
                        <span class="text-danger">@Html.ValidationMessageFor(m => m.Shower)</span>
                    </div>
                    <div class="col-sm-2">
                        <label asp-for="TV"></label>
                        <input type="checkbox" asp-for="TV" />
                        <span class="text-danger">@Html.ValidationMessageFor(m => m.TV)</span>
                    </div>
                    <div class="col-sm-2">
                        <label asp-for="Kitchen"></label>
                        <input type="checkbox" asp-for="Kitchen" />
                        <span class="text-danger">@Html.ValidationMessageFor(m => m.Kitchen)</span>
                    </div>
                    <br />
                    <br />
                    <div class="col-sm-2">
                        <label asp-for="Heating"></label>
                        <input type="checkbox" asp-for="Heating" />
                        <span class="text-danger">@Html.ValidationMessageFor(m => m.Heating)</span>
                    </div>
                    <div class="col-sm-2">
                        <label asp-for="Accessible"></label>
                        <input type="checkbox" asp-for="Accessible" />
                        <span class="text-danger">@Html.ValidationMessageFor(m => m.Accessible)</span>
                    </div>
                </div>
                <br />
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>